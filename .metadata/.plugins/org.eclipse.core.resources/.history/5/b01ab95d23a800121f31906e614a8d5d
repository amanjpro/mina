package scala.ch.usi.inf.l3.mina.store


sealed trait Value {
  def value: Option[HPEObject];
}

case object Bottom extends Value {
  //TODO or should I throw an exception?
  override def value: Option[HPEObject] = None
}

case object Top extends Value {
  //TODO or should I throw an exception?
  override def value: Option[HPEObject] = None
}

case class CTValue(v: HPEObject) extends Value {
  override def value: Option[HPEObject] = Some[v]
}

case class AbsValue(v: HPEObject) extends Value {
  override def value: Option[HPEObject] = Some[v]
}